# Telegram Bot API токен
TELEGRAM_TOKEN=your-telegram-token

# Telegram Chat ID (группа или пользователь)
TELEGRAM_CHAT_ID=your-chat-id

# Zora API Key (если есть, опционально)
ZORA_API_KEY=your-zora-api-key

# Включить отладочные сообщения в Telegram (true/false)
DEBUG=true

# DRY_RUN: не отправлять сообщения в Telegram (true/false)
DRY_RUN=false

# Минимальное число подписчиков в X (Twitter)
TWITTER_MIN_FOLLOWERS=250
